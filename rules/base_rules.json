{
  "allowlist": {
    "ip": [],
    "paths": ["/admin/stats"]
  },
  "denylist": {
    "ip": []
  },
  "rules": [
    {
      "id": "SQLI_BASIC",
      "description": "Basic SQL injection indicators",
      "targets": ["path", "query", "body"],
      "pattern": "(?i)(union\\s+select|\\bor\\b\\s+\\d+=\\d+|--|/\\*|\\*/|drop\\s+table)",
      "action": "LOG",
      "severity": "HIGH",
      "tags": ["sqli"]
    },
    {
      "id": "XSS_BASIC",
      "description": "Basic XSS indicators",
      "targets": ["path", "query", "body"],
      "pattern": "(?i)(<\\s*script|javascript:|onerror\\s*=|onload\\s*=|<\\s*iframe)",
      "action": "BLOCK",
      "severity": "HIGH",
      "tags": ["xss"]
    },
    {
      "id": "TRAVERSAL_BASIC",
      "description": "Path traversal indicators",
      "targets": ["path", "query"],
      "pattern": "(\\.\\./|%2e%2e%2f|\\.\\.\\\\|%2e%2e%5c)",
      "action": "BLOCK",
      "severity": "MEDIUM",
      "tags": ["traversal"]
    },
    {
      "id": "SUSPICIOUS_USER_AGENT",
      "description": "Log suspicious user agents (tuning rule â€” do not block)",
      "targets": ["headers"],
      "pattern": "(?i)(sqlmap|nikto|acunetix)",
      "action": "LOG",
      "severity": "LOW",
      "tags": ["tuning", "headers"]
    }
  ]
}
